- var menuItems = {'Home': '/', 'Articles':'/articles', 'About': '/about', 'Users': '/users'};

nav.navbar.navbar-default
    .container
        .navbar-header
            button.navbar-toggle.collapsed(type='button' data-target='#navbar' aria-expanded='false' aria-controls='navbar' data-toggle='collapse') Menu
            a.navbar-brand My app
        .collapse.navbar-collapse#navbar
            ul.nav.navbar-nav
                each val, key in menuItems
                    if activeMenuItem === key
                        li.active
                            a(href=val, title=key)= key
                    else
                        li
                            a(href=val, title=key)= key
            ul.nav.navbar-nav.navbar-right
              li(ng-show='app.username()')
                a(href='users/profile') {{app.username()}}
              li(ng-hide='app.username()')
                a(href='users/login') Log in